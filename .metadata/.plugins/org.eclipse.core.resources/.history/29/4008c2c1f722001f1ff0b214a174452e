package Job_application.UserService.Service;



import java.io.IOException;
import java.util.List;

import org.modelmapper.ModelMapper;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;
import org.springframework.web.multipart.MultipartFile;

import Job_application.UserService.UserDto.UserDto;
import Job_application.UserService.UserEntity.User_table;
import Job_application.UserService.UserRepository.UserRepository;

@Service
public class UserServiceImpl implements  UserService{
	
	@Autowired
	private UserRepository userRepository;
	
	@Autowired
	private ModelMapper ModelMapper;

	@Override
	public String saveUser(String email, String password, String name, long mobilenumber, List<String> skills,
			MultipartFile file) throws IOException {
		  User_table user = new User_table();
		  user.setEmail(email);
		  user.setMobilenumber(mobilenumber);
		  user.setName(name);
		  user.setPassword(password);
		  user.setSkills(skills);
		user.setFileData(file.getBytes());
		  userRepository.save(user);
		return "data uploaded";
	}

	
}
